
@{
    ViewBag.Title = "ExamExplanation";
    Layout = "~/Views/Shared/_stuindex.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>s_new_test1</title>
    <script src="jQuery easyUI/jquery.min.js"></script>
    <script src="jQuery easyUI/jquery.easyui.min.js"></script>
    <script src="jQuery easyUI/easyui-lang-zh_CN.js"></script>
    <link rel="stylesheet" href="jQuery easyUI/themes/material-teal/easyui.css">
    <link rel="stylesheet" href="font-awesome-4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="CSS/s_new_test1.css">
</head>
<style>
    :focus {
        outline: none;
    }

    body {
        /*background-color: #ddd;*/
    }

    .bg {
        width: 500px;
        height: 600px;
        margin: 60px auto;
        background-color: white;
        border-radius: 8px;
    }

    .content {
        height: auto;
        padding: 50px;
    }

        .content h3 {
            text-align: center;
            margin-bottom: 40px;
        }

        .content p {
            font-size: 18px;
        }

    .btn {
        width: 400px;
        margin-left: 50px;
        margin-top: 120px;
    }

        .btn a {
            text-align: center;
            line-height: 40px;
            color: white;
            width: 100%;
            height: 40px;
            background-color: #1db0b8;
            opacity: 0.9;
            font-size: 18px;
        }

            .btn a:hover {
                color: white;
                background-color: #1db0b8;
                opacity: 1;
            }
</style>

<body>
    <div class="bg">
        <div class="content">
            <h3>练习说明</h3>
            <p>练习时间：@ViewBag.time</p>
            <p>练习时长：@ViewBag.duration</p>
            <p>练习内容：@ViewBag.details</p>
            <p>总分：@ViewBag.score 分</p>
            <p>注意事项：@ViewBag.attention</p>
        </div>
        <div class="btn">
            <a href="/Stuhome/Practice/@ViewBag.ecid" class="easyui-linkbutton">开始练习</a>
        </div>
    </div>
</body>
</html>
