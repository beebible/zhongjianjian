@model IEnumerable<moocweb.Models.stu_exam_right_answer>
@{
    ViewBag.Title = "Exam_feedback";
    Layout = "~/Views/Shared/_stuindex.cshtml";
}

    <style>
        .top {
            width: 100%;
            height: 120px;
            /*border: 1px solid #d7dfe3;*/
            /*border-radius: 4px;*/
            /*box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);*/
        }

            .top button {
                height: 34px;
                margin-top: 20px;
                margin-left: 20px;
                color: white;
                opacity: 0.9;
            }

            .top .btn {
                background-color: #1db0b8;
            }

                .top .btn:hover {
                    color: white;
                    opacity: 1.2;
                }

                .top .btn:focus {
                    color: white;
                    outline: none;
                }

            .top .score {
                float: right;
                margin-top: 9px;
                margin-right: 20px;
                padding: 15px 30px;
                width: 20%;
                height: 100px;
                background-color: white;
                border-radius: 4px;
                position: relative;
            }

        .score h3 {
            position: absolute;
            right: 35px;
            top: -4px;
            color: #1db0b8;
        }

        .score .sctext {
            display: block;
            font-size: 16px;
            color: #878787;
            margin-bottom: 2px;
        }

        .score .scnum {
            display: block;
            font-size: 24px;
            color: #878787;
            font-weight: 600;
        }

        .score .progress {
            height: 5px;
            box-shadow: none;
            margin-bottom: 0;
            margin-top: 3px;
        }

        .progress .progress-bar {
            background-color: #1db0b8;
            background-image: none;
        }

        .center {
            width: 98%;
            padding: 10px 30px;
            margin: 0 auto;
            background-color: white;
            border-radius: 4px;
        }

        #tab li a {
            color: #1db0b8;
        }

            #tab li a:active {
                color: #555;
            }

        .tabctt {
            width: 100%;
            
            padding: 20px 0;
        }

            .tabctt .ques {
                width: 100%;
                border: 1px solid #d7dfe3;
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
                border-radius: 4px;
                padding: 16px 30px;
                margin-bottom: 10px;
            }

        .ques .topic {
            margin-bottom: 8px;
            color: #878787;
            font-weight: 600;
            font-size: 19px;
        }

        .ques .topicctt {
            height: auto;
            color: #333;
            font-size: 16px;
        }

        .ques .ans {
            color: #555;
        }

        .pst {
            position: relative;
        }

        .ques .btm {
            margin-bottom: 9px;
        }

        .ques .hlabel {
            position: absolute;
            right: 40px;
            top: 10px;
        }

        .ques .mis {
            font-size: 18px;
            color: #878787;
            margin-bottom: 9px;
        }

        .ques .red {
            color: #ed7f7e;
        }
    </style>
    <script>
        $(function () {
            $('#tab a:first').tab('show');//初始化显示哪个tab 
        })
    </script>
<body style="background-color:#f2f2f2;">
    <div class="top">
        <button class="btn" href="#" role="button">
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> 返回
        </button>
        <div class="score">
            <h3><span class="glyphicon glyphicon-education" aria-hidden="true"></span></h3>
            <div class="sctext">分数</div>
            <div class="scnum">@ViewBag.sum_score</div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="93" aria-valuemin="0" aria-valuemax="100" style="width: 93%;"></div>
            </div>
        </div>
    </div>
    <div class="center">
        @if (Model.Count() == 0) {
            <div class="alert alert-danger" style="height: 70px;font-size: 17px;padding: 23px 15px;">
                <a href=" " class="close" data-dismiss="alert">
                    &times;</a>
                    <strong>考试期间未提交试卷！</strong>
            </div>
        }
        @if (Model.Count() != 0) {
        <ul id="tab" class="nav nav-tabs nav-justified">
            <li class="active"><a href="#1" data-toggle="tab">1</a></li>
            @{
                var question_sum = ViewBag.categories;
                for (int i = 2; i < question_sum + 1; i++) {
                    <li><a href="#@i" data-toggle="tab">@i</a></li>
                }
             }
        </ul>
                }
        <div id="TabContent" class="tab-content">
            @{
                var m = Model.ToArray();
                if (Model.Count() != 0) {
                    <div class="tab-pane fade in active tabctt" id="1">
                        <div class="ques">
                            <div class="topic">题目</div>
                            <div class="topicctt">@m[0].title</div>
                        </div>
                        <div class="ques pst">
                            <h4 class="hlabel"><span class="label label-warning">分数：@m[0].score</span></h4>
                            <div class="topic ans">你的答案</div>
                            <div class="topicctt btm">@m[0].ans</div>
                            <div class="mis">答案评价</div>
                            <div>@m[0].wronginfo</div>
                        </div>
                        <div class="ques">
                            <div class="topic red">正确答案</div>
                            <div class="topicctt">@m[0].right_answer</div>
                        </div>
                    </div>
                }


                for (int i = 1; i < Model.Count(); i++) {
                    var j = i + 1;

                    <div class="tab-pane fade tabctt" id="@j">
                        <div class="ques">
                            <div class="topic">题目</div>
                            <div class="topicctt">@m[i].title</div>
                        </div>
                        <div class="ques pst">
                            <h4 class="hlabel"><span class="label label-warning">分数：@m[i].score</span></h4>
                            <div class="topic ans">你的答案</div>
                            <div class="topicctt btm">@m[i].ans</div>
                            <div class="mis">答案评价</div>
                            <div>@m[i].wronginfo</div>
                        </div>
                        <div class="ques">
                            <div class="topic red">正确答案</div>
                            <div class="topicctt">@m[i].right_answer</div>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</body>

